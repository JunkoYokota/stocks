<div class="col-9">
  <h3><a href="#">Stocked UP!</a></h3>
</div>
<div class="wrap">
  <%= render 'stocks/layouts/tab' %>
  <div class="user_panel_area">
    <ul class="row justify-content-center no-gutters">
      <div class="col-11">
        <div class="product_name">
          <li>
            <h3>ユーザー登録</h3>
          </li>
        </div>
        <div class="row justify-content-between border_bg">
          <div class="col-10">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="box-name">
              <%= f.label :user_name %><br />
              <%= f.text_field :user_name, autofocus: true %>
            </div>
            <div class="box-email">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="box-password">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以内)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="box-password">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn-usr' %>
        </div>
      </div>
    </ul>   
    <% end %>
    <div class="col-9">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
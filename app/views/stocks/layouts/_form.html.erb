<div class="row">
  <div class="col-5">
    <div class="dropdown">
      <ul>
        <li class="dropdown_menu">
          <ul>
            <li><%= link_to("5", "/stock_list/5") %></li>
            <li><%= link_to("15", "/stock_list/15") %></li>
            <li><%= link_to("30", "/stock_list/30") %></li>
            <li><%= link_to("50", "/stock_list/50") %></li>
          </ul>
        </li>
      </ul>
      <label>件ずつ表示する</label>
    </div>
  </div>
  <div class="col-5 ml-auto text-center">
    <a href="/index_past">
      <i class="far fa-star"></i>
      <span class="d-non d-sm-inline pl-1">過去のstocks</span></a>
  </div>
</div>
<div class="stocks">
  <% @stocks.each do |stock| %>
  <ul class="row no-gutters">
    <label class="col-12">
      <div class="product_name">
        <li>
          <div class="sticky">
            <% if stock.favorites %>
            <span class="fas fas-heart btn-sticky-fev1"><%= link_to "お気に入り", stock_path(stock, stock: {favorites: false}), remote: true, method: :put, class: 'fev' %></span>
            <% else %>
            <span class="fb far-heart btn-sticky-fev0"><%= link_to "add love", stock_path(stock, stock: {favorites: true}), remote: true, method: :put, class: 'fev' %></span>
            <% end %>
            <% if stock.tags %>
            <span class="fas far-star btn-sticky-tag1"><%= link_to "ふせん", stock_path(stock, stock: {tags: false}), method: :put, class: "tag", :name => 'to_index' %></span>
            <% else %>
            <span class="fc far-star btn-sticky-tag0"><%= link_to "ふせんする", stock_path(stock, stock: {tags: true}), method: :put, class: "tag", :name => 'to_index' %></span>
            <% end %>
          </div>
          <h2 class="check_box"><%= check_box_tag 'stocks_ids[]', stock.id %></h2>
          <h2><%= stock.product_name %></h2>
        </li>
      </div>
      <div class="row justify-content-between border_bg">
        <div class="col-10">
          <li> ｜ 賞味期限 ｜ <%= stock.expiration %> ｜ </li><br />
          <% if stock.open_date.present? %>
          <li> ｜ 開封日 ｜ <%= stock.open_date %> ｜ </li><br />
          <% end %>
          <li> ｜ メーカー・購入店舗等 ｜ <%= stock.detail %></li><br />
          <% if stock.content.present? %>
          <li> ｜ 詳細・メモ ｜ <%= stock.content %></li>
          <% end %>
        </div>
        <div class="col-1 justify-content-end d-flex align-items-end">
          <div class="btn-group" role="group" aria-label="Basic example">
            <li class="edit"><%= link_to '編集する', "/stocks/#{stock.id}/edit", method: :get %></li>
            <li class="delete"><%= link_to '消費済み', "/stocks/#{stock.id}/", method: :get %></li>
            <li class="delete"><%= link_to "消費済にする", stock_path(@stock, stock: {consumed: false}), method: :put %></li>
            <li class="delete"><%= link_to "消費済にする", stock_path(@stock, stock: {consumed: false}), method: :put %></li>
            <% if stock.favorites %>
            <span class="fas fas-heart btn-sticky-fev1"><%= link_to "お気に入り", stock_path(stock, stock: {favorites: false}), remote: true, method: :put, class: 'fev' %></span>
            <% else %>
            <span class="fb far-heart btn-sticky-fev0"><%= link_to "add love", stock_path(stock, stock: {favorites: true}), remote: true, method: :put, class: 'fev' %></span>
            <% end %>
            <% if stock.tags %>
            <span class="fas far-star btn-sticky-tag1"><%= link_to "ふせん", stock_path(stock, stock: {tags: false}), method: :put, class: "tag", :name => 'to_index' %></span>
            <% else %>
            <span class="fc far-star btn-sticky-tag0"><%= link_to "ふせんする", stock_path(stock, stock: {tags: true}), method: :put, class: "tag", :name => 'to_index' %></span>
            <% end %>
          </div>
        </div>
      </div>
    </label>
  </ul>
  <% end %>
</div>
<%= will_paginate @stocks %>
<%= render 'stocks/layouts/header' %>
<div class="wrap">
  <div class="tab_area">
    <ul class="row nav justify-content-end no-gutters">
      <li class="col-sm-2 nav-item justify-content-start">
        <a href="/stocks">
          <i class="far fa-lightbulb"></i>
          <span class="d-non d-sm-inline pl-1">あなたの在庫</span></a>
      </li>
      <li class="col-sm-2 nav-item1 justify-content-start">
        <i class="far fa-lightbulb"></i>
        <span class="d-non d-sm-inline pl-1">記録中</span>
      </li>
    </ul>
  </div>
  <div class="panel_area">
    <div class="stocks">
      <%= render 'error_form' %>
      <ul class="row no-gutters">
        <label class="col-12">
        <%= form_with model: @stock, local: true do |form| %>
          <div class="product_name">
            <li>
              <h2><%= form.text_field :product_name, placeholder: '商品名' %></h2>
            </li>
          </div>
        <div class="row justify-content-between border_bg">
          <div class="col-10">
            <li>
              <%= form.label :expiration %>
              <%= form.date_field :expiration, placeholder: '賞味期限' %>
            </li><br />
            <li>
              <%= form.label :open_date %>
              <%= form.date_field :open_date, placeholder: '開封日' %>
            </li><br />
            <li>
              <%= form.label :detail %><br />
              <%= form.text_area :detail, placeholder: 'メーカー・購入店舗等' %>
            </li><br />
            <li>
              <%= form.label :content %><br />
              <%= form.rich_text_area :content, placeholder: '詳細・メモ　添付ファイルは2つまで' %>
            </li>
            <%= form.submit "登録する", class: 'btn-usr' %>
          </div>
        </div>
        <% end %>
      </div>
    </ul>
  </div>
</div>
<a href="/stocks/">Home!</a>
<div class="header">
  <div class="row">
    <div class="col-9">
      <h3><%= current_user.user_name %>さん<a href="/stocks/new">Stocked UP!</a></h3>
    </div>
    <div class="col-3">
      <%= button_to 'ログアウト', destroy_user_session_path, method: :delete, :class => "btn btn-info" %>
    </div>
  </div>
</div>
<div class="wrap">
  <div class="tab_area">
    <ul class="row nav justify-content-end no-gutters">
      <li class="col-sm-2 nav-item1 justify-content-start">
      <i class="far fa-lightbulb"></i>
      <span class="d-non d-sm-inline pl-1">あなたの在庫</span>
      </li>
      <li class="col-sm-2 nav-item justify-content-start">
      <a href="/index_near">
      <i class="far fa-bell"></i>
      <span class="d-non d-sm-inline pl-1">賞味期限間近</span></a>
      </li>
      <li class="col-sm-2 nav-item justify-content-start">
        <a href="/index_expire">
        <i class="fas fa-exclamation-triangle"></i>
        <span class="d-non d-sm-inline pl-1">賞味期限切れ</span></a>
      </li>
    </ul>
  </div>
  <div class="panel_area">
    <%= form_tag("/confirm_stocks", method: :get) do %>
      <%= render partial: 'form.html.erb' %>
      <div class="btn-group" role="group" aria-label="Basic example">
        <%= submit_tag "まとめて編集", :name => "edit_all" , :class => "btn btn-outline-info" %>
        <%= submit_tag "一括削除", :name => 'delete_all', :class => "btn btn-outline-warning" %>
      </div>
    <% end %>
  </div>
</div>

